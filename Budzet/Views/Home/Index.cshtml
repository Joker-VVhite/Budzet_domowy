@{
    ViewData["Title"] = "Domowy Budżet";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <header class="text-center">
            <h1>@ViewData["Title"]</h1>
            <p class="lead">Proste zarządzanie finansami domowymi</p>
        </header>



        <div class="text-center mt-5">
            <p><strong>Opcje zarządzania:</strong></p>
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <a asp-controller="Transactions" asp-action="Create" style="background-color:#0217b0;color:#f1f1f1;font-weight:600;" class="btn btn-lg w-100 mb-3">Dodaj transakcję</a>
                    <a asp-controller="Budgets" style="background-color:#f9ee00;color:#010101;font-weight:600;" class="btn btn-lg w-100 mb-3">Podsumowanie budżetu</a>
                    <a asp-controller="Transactions" style="background-color:#696969;color:#f1f1f1;font-weight:600;" class="btn btn-lg w-100 mb-3">Historia transakcji</a>
                </div>
            </div>
        </div>

        <footer class="text-center mt-5">
            <p>&copy; 2025 Domowy Budżet</p>
            <a href="@Url.Action("Help", "Home")" class="btn btn-link">Pomoc</a>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>